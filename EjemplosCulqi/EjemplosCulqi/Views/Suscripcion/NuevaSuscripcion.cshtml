    ViewBag.Title = "NuevaSuscripcion";
}

<h2>NuevaSuscripcion</h2>

@Html.TextBox("codigo_comercio", (string)ViewBag.codigo_comercio)
<button id="botonPagar">Pagar</button>

<!-- Abre el checkout Culqi -->
